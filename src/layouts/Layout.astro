---
import "@/styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html>
	<head>
		<title>{title}</title>
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
		/>
	</head>
	<body class="bg-gray-100 flex items-center justify-center min-h-screen p-4">
		<main>
			<slot />
		</main>
	</body>
</html>
