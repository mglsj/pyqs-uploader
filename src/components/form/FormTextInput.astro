---
interface Props {
	label: string;
	id: string;
	name: string;
	value?: string;
	placeholder?: string;
	pattern?: string;
	required?: boolean;
}

const {
	label,
	id,
	name,
	value,
	placeholder,
	pattern,
	required = false,
} = Astro.props;
---

<div>
	<label class="block text-sm font-medium text-gray-700">{label}</label>
	<input
		type="text"
		id={id}
		name={name}
		placeholder={placeholder}
		value={value}
		pattern={pattern}
		class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
		required={required}
	/>
</div>
